@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center">
    <div class="w-50 mt-5">
        <h2 class="p-4 text-center">Register</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <!-- Email input -->
            <div class="form-outline mb-4">
                <input asp-for="Input.Email" id='username' class="form-control" />
                <label class="form-label" for="username">Email address</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <input asp-for="Input.Password" id="Password" class="form-control" />
                <label class="form-label" for="Password">Password</label>
            </div>

            <!-- Submit button -->
            <button type="submit" id="registerSubmit" class="btn btn-warning btn-block mb-4">Register</button>
        </form>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
